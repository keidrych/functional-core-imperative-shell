{
	"name": "cloud-native-internal",
	"description": "Starter scaffold for Internal Cloud Native Applications",
	"homepage": "https://github.com/sotekton/cloud-native-internal#readme",
	"version": "0.0.0",
	"main": "index.js",
	"keywords": [],
	"dependencies": {
		"ajv": "6.6.2",
		"await-result": "^2.2.1",
		"debug": "4.1.0",
		"deeps": "^1.4.5",
		"fast-json-patch": "^2.0.7",
		"fastify": "1.13.2",
		"fastify-blipp": "^1.2.1",
		"fastify-sensible": "^0.2.0",
		"is-installed": "^2.0.1",
		"make-promises-safe": "4.0.0",
		"per-env": "^1.0.2",
		"permit": "^0.2.4",
		"rambdax": "1.3.0",
		"redrun": "7.0.3",
		"resquire": "^1.1.1",
		"rfdc": "^1.1.2",
		"to-json-schema": "^0.2.0",
		"upath": "^1.1.0",
		"url-parse": "1.4.4",
		"xxhashjs": "^0.2.2",
		"zora": "^2.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "7.2.1",
		"@commitlint/config-conventional": "7.1.2",
		"@commitlint/lint": "7.2.1",
		"@commitlint/prompt-cli": "7.2.1",
		"acorn": "6.0.4",
		"clear-require": "^3.0.0",
		"codecov": "^3.1.0",
		"documentary": "^1.20.1",
		"eslint": "5.10.0",
		"eslint-config-prettier": "3.3.0",
		"eslint-config-xo": "0.25.1",
		"eslint-plugin-ava": "5.1.1",
		"eslint-plugin-import": "2.14.0",
		"eslint-plugin-no-use-extend-native": "0.3.12",
		"eslint-plugin-node": "8.0.0",
		"eslint-plugin-prettier": "3.0.0",
		"eslint-plugin-promise": "4.0.1",
		"eslint-plugin-unicorn": "6.0.1",
		"faker": "^4.1.0",
		"husky": "1.2.1",
		"lint-staged": "8.1.0",
		"local-repl": "^4.0.0",
		"nock": "^10.0.2",
		"npm-check": "^5.9.0",
		"npm-pin-dependencies": "1.0.1",
		"nyc": "^13.1.0",
		"pino-pretty": "2.5.0",
		"prettier": "1.15.3",
		"rewire": "^4.0.1",
		"run-tests": "^1.0.4",
		"supertest": "^3.3.0",
		"tap-mocha-reporter": "3.0.7",
		"testdouble": "^3.9.0",
		"updated": "1.3.0",
		"xo": "0.23.0"
	},
	"optionalDependencies": {
		"fastify-cookie": "2.1.4",
		"fastify-nodemailer": "1.4.1",
		"iron": "5.0.6",
		"nanoid": "2.0.0",
		"password-magic": "^1.0.0",
		"pbkdf2": "3.0.17",
		"fastify-server-session": "^2.0.0"
	},
	"engines": {
		"node": ">=8"
	},
	"files": [
		"index.js"
	],
	"scripts": {
		"commit": "commit",
		"doc": "doc documentary -o README.md",
		"format": "redrun -p format:*",
		"format:prettier": "prettier --write '**/*.{css,md}'",
		"format:xo": "xo ./**/*.js",
		"start": "node index.js",
		"repl": "local-repl",
		"test": "per-env",
		"posttest": "redrun -p codecov:report codecov:check",
		"test:api": "nyc --cache --per-file --silent run-tests '{,!(node_modules)/**/}*.?(api).js' | tap-mocha-reporter list",
		"test:development": "nyc --cache --per-file --silent run-tests '{,!(node_modules)/**/}*.?(spec|sanity).js' | ./node_modules/.bin/tap-mocha-reporter list",
		"test:sanity": "nyc --cache --per-file --silent run-tests '{,!(node_modules)/**/}*.?(sanity).js' | tap-mocha-reporter list",
		"test:ci": "nyc --cache --per-file --silent run-tests '{,!(node_modules)/**/}*.?(spec|sanity|api).js' | tap-mocha-reporter list",
		"posttest:ci": "redrun -p codecov:*",
		"codecov:check": "nyc check-coverage --branches=90 --functions=90 --lines=90 --statements=90",
		"codecov:generate": "nyc report --reporter=text-lcov > coverage.lcov",
		"codecov:report": "nyc report --reporter=text",
		"codecov:upload": "codecov -t ",
		"prestart:production": "run-tests '{,!(node_modules)/**/}*.?(sanity|api).js' | tap-mocha-reporter dot"
	},
	"license": "SEE LICENSE IN LICENSE",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -e $GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"*.{js}": "xo",
			"*.{css,md}": [
				"prettier --write",
				"git add"
			],
			"*.{spec,sanity,api}.js": [
				"nyc --per-file --check-coverage --branches=50 --functions=50 --lines=90 --statements=50 run-tests"
			],
			"documentary/**/*.md": [
				"redrun doc",
				"git add README.md"
			]
		},
		"ignore": [
			"CHANGELOG.md",
			"microgen/**"
		]
	},
	"xo": {
		"globals": [
			"$",
			"_",
			"dbError",
			"config"
		],
		"ignores": [
			"python_modules/"
		],
		"prettier": true,
		"rules": {
			"camelcase": "off",
			"generator-star-spacing": "off",
			"import/no-extraneous-dependencies": "off",
			"import/no-unassigned-import": "off",
			"import/no-unresolved": "off",
			"import/order": "off",
			"operator-linebreak": "off"
		},
		"semicolon": false
	}
}
